{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/api-gateway/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "tsconfig.json"
    },
    "monorepo": true,
    "root": "apps/api-gateway",
    "projects": {
        "api-gateway": {
            "type": "application",
            "root": "apps/api-gateway",
            "entryFile": "main",
            "sourceRoot": "apps/api-gateway/src",
            "compilerOptions": {
                "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
            }
        },
        "image-handler": {
            "type": "application",
            "root": "apps/image-handler",
            "entryFile": "main",
            "sourceRoot": "apps/image-handler/src",
            "compilerOptions": {
                "tsConfigPath": "apps/image-handler/tsconfig.app.json"
            }
        }
    }
}
